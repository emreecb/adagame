
@{
    ViewBag.Title = Model.KuponAd;
}

@model  WebUI.Models.Data.Kupon

<div class="panel panel-default">
    <div class="panel-heading panel-heading-custom">
        <h3 class="panel-title">
            <span class="glyphicon glyphicon-fire"></span>
            <strong>@Model.KuponAd</strong>
        </h3>
    </div>
    <div class="panel-body">
        <div class="item-container">
            <div class="container">
                <div class="col-md-5">
                    <div class="product col-md-9 service-image-left">
                        <center>
                            <img id="item-display" src="data:image/png;base64,@System.Convert.ToBase64String(Model.KuponFoto)" style="margin-top:10px; margin-left:15px;" alt="Model.KuponAd"></img>
                        </center>
                    </div>

                </div>

                <div class="col-md-7">
                    <div class="product-title"><strong>@Model.KuponAd</strong></div>
                    <p class="product-desc"><p>Aksesuar</p></div>
                <div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
                <hr>
                <div class="product-price">@Model.KuponFiyat <i class="fa fa-try" aria-hidden="true"></i></div>
                <div class="product-stock">Stokta</div>
                <hr>
                <div class="btn-group cart">
                    <button type="button" class="btn btn-success">
                        Sepete Ekle
                    </button>
                </div>
                <div class="btn-group wishlist">
                    <button type="button" class="btn btn-danger">
                        Satın Al
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="col-md-12 product-info">
            <ul id="myTab" class="nav nav-tabs nav_tabs">

                <li class="active" style="border-bottom:0px"><a href="#service-one" data-toggle="tab"><strong>Açıklama</strong></a></li>
                <li style="border-bottom:0px"><a href="#service-two" style="border-bottom:0px" data-toggle="tab">Ürün Bilgisi</a></li>
                <li style="border-bottom:0px"><a href="#service-three" style="border-bottom:0px" data-toggle="tab">Yorumlar</a></li>

            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade in active" id="service-one">

                    <section class="container product-info">
                        <div style="width:1000px;overflow:auto">
                            <pre><strong>@Model.KuponIcerik</strong></pre>
                        </div>                       
                    </section>

                </div>
                <div class="tab-pane fade" id="service-two">

                    <section class="container"></section>

                </div>
                <div class="tab-pane fade" id="service-three">

                </div>
            </div>
            <hr>
        </div>
    </div>
</div>
</div>