@{
    ViewBag.Title = WebUI.Resources.dil.OyunPC;
}
@model  List<WebUI.Models.Data.Urun>

<div class="row" style="padding-top: 10px">
    <div class="col-md-12">
        <img class="img" src="~/image/pcbanner.png" alt="" style="width:100%; height:100%; margin-bottom:10px">
    </div>


</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading panel-heading-custom">
            <h4>@WebUI.Resources.dil.OyunPC</h4>
        </div>
        <div class="panel-body">
            <div class="row">
              
                @foreach (var item in Model.Where(x => x.Tip == 3).OrderByDescending(x=> x.ID))
            {
                    <div class="col-md-3">
                        <div class="item pl_item">
                            <div class="new_badge"></div>
                            <div class="pl_photo"></div>
                            @if (item.Foto == null)
                            {
                                <img src="~/Content/images/resimyok.png" alt="@item.UrunAdi" style="width:190px" />
                            }
                            else
                            {
                                <a href="/Home/OyunDetails?UrunID=@item.ID">
                                    <img src="data:image/png;base64,@System.Convert.ToBase64String(item.Foto)" alt="@item.UrunAdi" style="width:190px" />
                                </a>
                            }


                                    <div class="pl_name" style="height:25px"><a href="/Home/OyunDetails?UrunID=@item.ID">@item.UrunAdi</a></div>
                                    <div class="pl_priceContainer">
                                        <div class="pl_price">@item.Fiyat<i class="fa fa-try" aria-hidden="true"></i></div>
                                        <div class="row" style="padding-left:5px; padding-top:5px;">
                                            <a href="/Home/OyunDetails?UrunID=@item.ID" class="btn btn-default btn-custom btn-sm"><span class="glyphicon glyphicon-shopping-cart"></span>&nbsp;Sepete Ekle</a>
                                        </div>
                                    </div>
</div>
                    </div>
                }






                    </div>
        </div>
    </div>
</div>